{
  "key": "aws-cloudwatch-notifier",
  "name": "AWS CloudWatch Notifier",
  "description": "AWS CloudWatch notifier bot - brought to you by GorillaStack",
  "vendor": {
    "name": "GorillaStack",
    "url": "http://www.gorillastack.com"
  },
  "links": {
    "self": "${host}/atlassian-connect.json",
    "homepage": "${host}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ]
    },
    "installable": {
      "callbackUrl": "${host}/installable"
    },
    "configurable": {
      "url": "${host}/config"
    },
    "webhook": {
      "url": "${host}/webhook",
      "pattern": "^/hello",
      "event": "room_message",
      "name": "Hello!",
      "authentication": "jwt"
    },
    "glance": [
      {
        "name": {
          "value": "Hello!"
        },
        "queryUrl": "${host}/glance",
        "key": "sample.glance",
        "target": "sample.sidebar",
        "icon": {
          "url": "${host}/img/logo.png",
          "url@2x": "${host}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "sample.sidebar",
        "name": {
          "value": "Hello Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "${host}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "sample.dialog",
        "title": {
          "value": "Hello Dialog!"
        },
        "url": "${host}/dialog",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Say Hello!"
            },
            "key": "sample.dialog.action",
            "enabled": true
          },
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
